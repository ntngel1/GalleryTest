<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:orientation="vertical"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/signInLayout" android:visibility="visible">

        <TextView
                android:text="Please, Sign In!"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/signInLabel"
                android:fontFamily="@font/sf_compact_display_regular" android:textSize="24sp"
                android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"/>
        <TextView
                android:text="Password"
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:id="@+id/passwordLabel"
                app:layout_constraintStart_toStartOf="@+id/passwordInput"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/loginInput"
                android:fontFamily="@font/sf_compact_display_regular"/>
        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/loginInput" android:layout_marginEnd="24dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="24dp"
                app:layout_constraintStart_toStartOf="parent" android:fontFamily="@font/sf_compact_display_regular"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/loginLabel"/>
        <Button
                android:text="Sign In"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:id="@+id/signInButton" app:layout_constraintStart_toStartOf="@+id/passwordInput"
                app:layout_constraintEnd_toEndOf="@+id/passwordInput"
                android:fontFamily="@font/sf_compact_display_semibold" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/passwordInput"/>
        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/passwordInput"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="24dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="24dp" app:layout_constraintHorizontal_bias="0.0"
                android:fontFamily="@font/sf_compact_display_regular" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/passwordLabel"/>
        <TextView
                android:text="Login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/loginLabel"
                app:layout_constraintStart_toStartOf="@+id/loginInput"
                android:fontFamily="@font/sf_compact_display_regular" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/signInLabel"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/signOutLayout" android:visibility="gone">
        <Button
                android:text="Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/button2"/>
    </LinearLayout>
</FrameLayout>