<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
android:background="@color/colorBackground">

    <androidx.appcompat.widget.Toolbar
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@android:color/background_light"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize"
            android:id="@+id/toolbar" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:navigationIcon="?attr/homeAsUpIndicator"/>
    <ImageView
            android:layout_width="0dp"
            app:srcCompat="@drawable/ic_launcher_background"
            android:id="@+id/ui_image"
            app:layout_constraintTop_toBottomOf="@+id/toolbar" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="240dp"
            android:scaleType="centerCrop"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/ui_title"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/ui_image" android:fontFamily="@font/sf_compact_display_semibold"
            android:textSize="20sp" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="20dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="20dp"
            android:textColor="@color/colorTitle" tools:text="Title"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/ui_description"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/ui_title" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            android:textColor="@color/colorParagraph" tools:text="Description" android:textSize="12sp"
            android:fontFamily="@font/sf_compact_display_regular"/>
</androidx.constraintlayout.widget.ConstraintLayout>
